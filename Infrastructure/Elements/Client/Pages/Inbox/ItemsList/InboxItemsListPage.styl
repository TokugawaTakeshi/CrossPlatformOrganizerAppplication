.CardsFlow

  display grid
  grid-template-columns repeat(auto-fit, minmax(250px, 1fr));
  gap 12px 16px

  padding 12px 16px


.InboxItemCard

  border-left-width 4px
  border-radius 4px

  Paddings({
    left: 8px,
    right: 4px,
    verticalSymmetric: 4px
  })

  border-left-style solid
  box-shadow 0 0 4px 2px alpha(black, 0.25)


  &__TextInput

    border-left-color #D50000


  &-Title

    MultiLineTextElementOverflowSafetyWithoutExtraSpaceCausedByLineHeight({ fontSize: 20px, lineHeight: 1.2 })

    font-weight bold
    color ShadesOfGray__39ColorsW3C_Palette[18]


  &-DateTimeLabel

    font-size 12px

    color ShadesOfGray__39ColorsW3C_Palette[24]

    margin-top 2px


  &-Description

    MultiLineTextElementOverflowSafetyWithoutExtraSpaceCausedByLineHeight({ fontSize: 14px, lineHeight: 1.2 })

    color ShadesOfGray__39ColorsW3C_Palette[20]

    margin-top 6px
