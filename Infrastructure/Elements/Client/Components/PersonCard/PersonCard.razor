@using BusinessRules.Enterprise


<div class="card">
  
  <div class="card-body">
    
    <h4 class="card-title">@Person.Name</h4>
    
    <dl class="row">
        
      <dt class="col-sm-3"><i class="bi bi-envelope"></i> Email</dt>
      <dd class="col-sm-9">@Person.Email</dd>
      
      <dt class="col-sm-3"><i class="bi bi-telephone"></i> Phone</dt>
      <dd class="col-sm-9">@Person.PhoneNumber</dd>
      
      <dt class="col-sm-3"><i class="bi bi-person"></i> Age</dt>
      <dd class="col-sm-9">@Person.Age</dd>
        
    </dl>
    
  </div>
  
  

</div>


@code {

  [Parameter]
  public Person Person { get; set; }
  
}