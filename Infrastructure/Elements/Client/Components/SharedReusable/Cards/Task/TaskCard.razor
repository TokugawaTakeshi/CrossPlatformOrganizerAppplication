<Dynamic
  Tag="@RootElementTag"
  class="TaskCard"
  tabindex="0"
>
  
  <span
    class="TaskCard-Checkbox"
    role="checkbox"
    tabindex="0"
    aria-checked="@(TargetTask.IsComplete)"
  >
    
    @if (TargetTask.IsComplete)
    {
      <Checkbox__Unchecked SpaceSeparatedAdditionalCSS_Classes="TaskCard-Checkbox-Icon" />
    }
    
  </span>
  
  <div class="TaskCard-Title"> @TargetTask.Title </div>
  
  @if (TargetTask.Description != null)
  {
    <div class="TaskCard-Description"> @TargetTask.Description </div>  
  }
  
</Dynamic>