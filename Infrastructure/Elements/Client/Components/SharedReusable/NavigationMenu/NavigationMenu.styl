.NavigationMenu

  &-Link

    display flex
    align-items center
    column-gap 12px

    Paddings({
      horizontalSymmetric: 12px,
      verticalSymmetric: 8px
    })

    cursor pointer


    &:hover

      background: YDF_ColorPalette.deepSkyBlue.mediumDark
      transition background 0.25s


    &:focus

      box-shadow: inset 0 0 4px 4px YDF_ColorPalette.deepSkyBlue.bright


    &:active

      background: YDF_ColorPalette.deepSkyBlue.slightlyDark


    &__Current

      background: YDF_ColorPalette.deepSkyBlue.bright

      pointer-events none


    &-Icon

      width 20px
      height 20px

      fill white


    &-Label

      font-size 16px

      font-weight bold
      color white
