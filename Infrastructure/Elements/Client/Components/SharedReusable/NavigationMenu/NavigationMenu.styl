.NavigationMenu

  &-Link

    display flex
    align-items center
    column-gap 12px

    Paddings({
      horizontalSymmetric: 12px,
      verticalSymmetric: 8px
    })

    cursor pointer


    &:hover

      background: PracticalColorCoordinateSystem.grayish.yellowishRed3
      transition background 0.25s


    &:focus

      box-shadow: inset 0 0 4px 4px PracticalColorCoordinateSystem.grayish.yellowishRed3


    &:active

      background: PracticalColorCoordinateSystem.grayish.reddishYellow7


    &__Current

      background: PracticalColorCoordinateSystem.vivid.reddishOrange4

      pointer-events none


    &-Icon

      width 20px
      height 20px

      fill white


    &-Label

      font-size 16px

      font-weight bold
      color white
