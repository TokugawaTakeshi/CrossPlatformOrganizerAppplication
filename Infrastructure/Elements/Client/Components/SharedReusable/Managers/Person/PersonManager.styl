.PersonManager

  &-Heading

    applyTextGeometryWithoutExtraSpaceCausedByLineHeight({
      fontSize: 24px,
      lineSpacing: 4px
    })
    
    
  &-Guidance

    margin-top 12px
  

  &-ActionBar

    display flex
    flex-direction row-reverse
    column-gap 8px

    retireFrom({ definitions: (".PersonManager-Heading" { y: 8px }) (".PersonManager-Guidance" { y: 6px }) })


  &-Metadata
  
    display grid
    grid-template-columns auto minmax(0, 1fr)
    gap 12px 8px

    margin-top 12px
    
    
    dt

      text-align right
      font-weight bold
      
      
    dd

      applyTextGeometryWithoutExtraSpaceCausedByLineHeight({
        fontSize: 14px,
        lineSpacing: 4px,
        mustAllowWordBreakingAnywhere: true
      }) 


  &-Form

    margin-top 16px


  &-Control

    retireFromElementWithSameSelector({ y: 12px })
    pushTargetFromSelf({ targetElementSelector: ".PersonManager-ActionBar", y: 16px })
