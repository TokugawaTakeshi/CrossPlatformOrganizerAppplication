@using FrontEndFramework.SVG_Icons.ExclamationMark;
@using FrontEndFramework.SVG_Icons.MultiplicationSign;
@using FrontEndFramework.SVG_Icons.InfoSign;


<div
  class="AttentionBox--YDF @rootElementModifierCSS_Classes @spaceSeparatedAdditionalCSS_Classes"
  role="alert"
>

  @if (hasPrependedSVG_Icon)
  {
    @* TODO 【次のプールリクエスト】 適切なアイコンを表示 https://github.com/TokugawaTakeshi/ExperimentalCSharpApplication1/issues/24 *@
    if (_decoration == StandardDecorativeVariations.error.ToString())
    {
      <ExclamationMarkIcon__Circled__Filled spaceSeparatedAdditionalCSS_Classes="AttentionBox--YDF-SVG_Icon" />  
    } 
    else if (_decoration == StandardDecorativeVariations.guidance.ToString())
    {
      <InfoSignIcon__Circled__Filled spaceSeparatedAdditionalCSS_Classes="AttentionBox--YDF-SVG_Icon"/>
    }
  }
  
  @if (title is not null)
  {
    <div
      class="AttentionBox--YDF-Title"
      id=@TITLE_HTML_ID
    >
      @title  
    </div>  
  }
  
  
  <div 
    class="AttentionBox--YDF-MainContent"
    aria-labelledby=@(title is not null ? TITLE_HTML_ID : null)
  >
    @ChildContent
  </div>
 
  @* TODO 【次のプールリクエスト】 SlideUp アニメーション https://github.com/TokugawaTakeshi/ExperimentalCSharpApplication1/issues/26 *@
  @if (hasDismissingButton)
  {
    <button
      class="AttentionBox--YDF-DismissingButton"
      type="button"
      aria-label="Hide this message"
      @onclick="onClickDismissingButton"
    >
      <MultiplicationSignIcon__Boxed__Filled spaceSeparatedAdditionalCSS_Classes="AttentionBox--YDF-DismissingButton-Icon" />
    </button>  
  }
  
</div>
