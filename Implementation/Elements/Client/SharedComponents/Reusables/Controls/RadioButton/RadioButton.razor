<div class="RadioButton--YDF @rootElementModifierSpaceSeparatedClasses">
  
  <span class="RadioButton--YDF-Ring"></span>
  
  <label for=@INPUT_ELEMENT_HTML_ID>@( label )</label>

  <input
    class="RadioButton--YDF-HiddenInputElement"
    type="radio" 
    name=@HTML_Name
    value=@HTML_Value
    id=@INPUT_ELEMENT_HTML_ID
  >
  
</div>