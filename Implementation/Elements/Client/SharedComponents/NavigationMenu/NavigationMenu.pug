mixin NavigationMenu

  nav.NavigationMenu&attributes(attributes)

    ul

      li
        a.NavigationMenu-Link(
          href="@Pages/Calendar/CalendarPage"
        )
          +Calendar--YDF_Icon.NavigationMenu-Link-Icon
          span.NavigationMenu-Link-Label Calendar
      
      li
        a.NavigationMenu-Link(
          href="@Pages/Task/Management/TasksManagementPage"
        )
          +Checklist--YDF_Icon.NavigationMenu-Link-Icon
          span.NavigationMenu-Link-Label Tasks

      li
        a.NavigationMenu-Link(
          href="@Pages/Person/Management/PeopleManagementPage"
        )
          +Person__Clock__Rectangled__Filled--YDF_Icon.NavigationMenu-Link-Icon
          span.NavigationMenu-Link-Label People
