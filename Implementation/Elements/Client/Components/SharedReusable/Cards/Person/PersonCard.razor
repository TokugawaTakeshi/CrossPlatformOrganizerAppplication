@using FrontEndFramework.Helpers

<DynamicTag
  name=@rootElementTag
  attributes=@(
    new Dictionary<string, object> {
      { "class", $"PersonCard { spaceSeparatedAdditionalCSS_Classes }" },
      { "tabindex", "0" },
      { "onclick", this.onClickOutermostElement }
    }
  )
>
  
  <dl class="PersonCard-Metadata">
    
    <dt>氏名</dt>
    <dd>@targetPerson.FamilyName @targetPerson.GivenName</dd>
    
    @if (!String.IsNullOrEmpty(targetPerson.EmailAddress))
    {
      <dt>メール</dt>
      <dd> @targetPerson.EmailAddress </dd>  
    }

    @if (!String.IsNullOrEmpty(targetPerson.PhoneNumber))
    {
      <dt>電話番号</dt>
      <dd>@targetPerson.PhoneNumber</dd>  
    }

    @if (targetPerson.Age != null)
    {
      <dt>年齢</dt>
      <dd> @targetPerson.Age</dd>  
    }
    
  </dl>
  
</DynamicTag>
