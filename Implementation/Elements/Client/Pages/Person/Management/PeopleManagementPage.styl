.PeopleManagementPage

  WIDE_CONTAINERS_CONFIGURATION_MINIMAL_WIDTH = 700px

  WideContainersConfiguration()
    @media container and (min-width: WIDE_CONTAINERS_CONFIGURATION_MINIMAL_WIDTH)
      {block}

  NarrowContainersConfiguration()
    @media container and (max-width: WIDE_CONTAINERS_CONFIGURATION_MINIMAL_WIDTH - SMALLEST_DIVISION_OF_CSS_PIXEL--YDF)
      {block}
  
  
  &-SpecificContent

    +WideContainersConfiguration()
    
      display grid
      grid-template-columns minmax(0, 1fr) NARROWEST_SCREEN_WIDTH_UNIT--YDF
    
    
    +NarrowContainersConfiguration()
    
      position relative


  &-PeopleViewer

    height 100% //** [ Theory ] `max-height 100%` will not work, but `height 100%` will. */

    overflow-y hidden //**　[ Theory ]　In this case, it only limits the maximal height */ 


    +WideContainersConfiguration()

      padding 8px
    

  &-PersonManager

    max-height 100%
    padding 8px

    overflow-y hidden //**　[ Theory ]　In this case, it only limits the maximal height */


    &__VisibleAtNarrowScreens
    
      +NarrowContainersConfiguration()
  
        width 100%
        height 100%
      
        background-color white
      
        position absolute
        top 0
        z-index: YDF_Configuration.zIndexes.floatingBelowModalsComponents

      
    &__HiddenAtNarrowScreens
      
      +NarrowContainersConfiguration()
      
        display none
