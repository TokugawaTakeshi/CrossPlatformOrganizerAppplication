.CalendarPage
  
  &-SpecificContent

    background: TemporaryHighlighting.red.o10

    
  &-DaysMatrix

    background: TemporaryHighlighting.yellow.o10
    
    table-layout fixed
    width 100%
    height 100%
    
  
  &-DayTitleCell

    width percentage(1/7)

    Paddings({
      verticalSymmetric: 4px,
      verticalUpwardShifting: 1px
    })
    font-size 14px

    text-align center
    color ShadesOfGray__39ColorsW3C_Palette[6]

    
    &__Holiday

      color #C65151
      
  
  &-DaySelectingButton

    ButtonLikeElementsPrimer()

    display flex
    flex-wrap wrap
    row-gap 2px
    column-gap 4px
    justify-content center
    
    width 100%
    height 100%
    Paddings({
      verticalSymmetric: 4px,
      verticalUpwardShifting: 1px
    })
    
    
    &-Label

      width 100%
      font-size 14px

      font-weight bold
      color: ShadesOfGray__39ColorsW3C_Palette[16]


    &-Icon
      
      width 16px
      height 16px
      
      fill: ShadesOfGray__39ColorsW3C_Palette[16]
